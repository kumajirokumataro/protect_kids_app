<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment_content_box" id ="this_comment_<%= comment.id %>"></div>
        <div class="comment_content"><%= comment.content %></div>
        <div class="comment_username"><%= comment.user.name %></div>
        <% if current_user && current_user.admin == true %>
          <span><%= link_to t('view.comment_edit'), edit_post_comment_path(post, comment), remote: true %></span>
          <span><%= link_to t('view.comment_destroy'), post_comment_path(post, comment), method: :delete, remote: true,
                                        data: { confirm: t('view.destroy_check')} %></span>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
